@page
@model ContosoUniversity.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Student Details</h1>

<h4>Student</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Student.LastName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Student.LastName)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Student.FirstMidName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Student.FirstMidName)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Student.EnrollmentDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Student.EnrollmentDate)</dd>
</dl>

<h4>Enrollments</h4>
@if (Model.Student.Enrollments != null && Model.Student.Enrollments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model.Student.Enrollments)
            {
                <tr>
                    <td>@enrollment.Course.Title</td>
                    <td>@enrollment.Grade</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No enrollments found.</p>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
